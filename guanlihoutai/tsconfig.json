{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "outDir": "./output",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "sourceMap": true,
    "pretty": true
  }
}
