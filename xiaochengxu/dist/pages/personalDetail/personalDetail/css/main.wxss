@import "/vendor/css/main.wxss";

.item {
  padding: 20rpx 26rpx 20rpx 26rpx;
  height: 128rpx;
  background: white;
  position: relative;
}
.item .title1 {
  position: relative;
  bottom: 40rpx;
  font-size: 36rpx;
  color: #222222;
  letter-spacing: 0;
  line-height: 36rpx;
}
.item .title2 {
  font-size: 36rpx;
  color: #222222;
  letter-spacing: 0;
  line-height: 36rpx;
}
.item .avator {
  content: none !important;
  position: relative;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  left: 400rpx;
}
.item .name {
  position: relative;
  height: 57rpx;
  overflow: hidden;
  left: 240rpx;
  font-size: 34rpx;
  color: #909090;
  letter-spacing: 0;
  line-height: 57rpx;
  text-overflow: ellipsis;
  max-width: 450rpx;
  white-space: nowrap;
}
.item .operate {
  float: right;
}
.item .operate ._em {
  font-style: normal;
  font-size: 28rpx;
  color: #AAAAAA;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 250rpx;
  vertical-align: middle;
}