@import "/vendor/css/main.wxss";

.illnessAddMain {
  width: 100%;
  height: 100%;
  background: #ffffff;
  box-sizing: border-box;
}
.illnessAddMain .illnessBox {
  position: relative;
  width: 634rpx;
  height: 240rpx;
  margin: 0 auto;
}
.illnessAddMain .illnessBox .inputCount {
  position: absolute;
  bottom: 12rpx;
  right: 10rpx;
  font-size: 36rpx;
  color: #FE8178;
}
.illnessAddMain .illnessBox .illnessAddArea {
  display: block;
  width: 634rpx;
  height: 240rpx;
  padding: 30rpx 28rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333333;
  border: 2rpx solid #cccccc;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.illnessAddMain .illnessBox .illnessAddArea::-webkit-input-placeholder {
  color: #aaaaaa;
}
.illnessAddMain .illnessAddBtnBox {
  margin-top: 80rpx;
}
.illnessAddMain .illnessAddBtnBox .illnessAddBtnSure {
  display: block;
  margin: 0 auto;
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  color: #ffffff;
  font-weight: bold;
  background: linear-gradient(-90deg, #3fe6bc 6%, #07b6ac 95%);
  box-shadow: 0 20rpx 36rpx 0 rgba(30, 231, 187, 0.38);
  border-radius: 100rpx;
}
.illnessAddMain .illnessAddBtnBox .illnessAddBtnCancle {
  display: block;
  width: 100%;
  margin-top: 44rpx;
  text-align: center;
  font-size: 34rpx;
  color: #929292;
}
.invite-title {
  padding: 0 66rpx;
  padding-top: 64rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.invite-title ._h2 {
  font-size: 40rpx;
  color: #222222;
}
.invite-title ._p {
  margin-top: 70rpx;
  color: #444444;
  font-size: 30rpx;
  line-height: 1.5;
}