@import "/vendor/css/main.wxss";

.doc-guide-list {
  padding: 20rpx 40rpx 40rpx;
}
.doc-guide-list .doc-guide-item {
  display: flex;
  align-items: center;
}
.doc-guide-list .doc-guide-item .doc-guide-left {
  width: 148rpx;
  height: 136rpx;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.5/notebookDefault.png") no-repeat center;
  background-size: 100% 100%;
}
.doc-guide-list .doc-guide-item .doc-guide-left .node-img {
  width: 136rpx;
  height: 136rpx;
}
.doc-guide-list .doc-guide-item .doc-guide-middle {
  flex: 1;
  margin: 0 24rpx;
}
.doc-guide-list .doc-guide-item .doc-guide-middle .guide-title {
  max-height: 96rpx;
  font-size: 34rpx;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333333;
}
.doc-guide-list .doc-guide-item .doc-guide-middle .guide-content {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
}
.doc-guide-list .doc-guide-item .doc-guide-right {
  width: 28rpx;
  height: 28rpx;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.5/arrow_right.png") no-repeat center;
  background-size: 100% 100%;
}
.doc-guide-list .doc-guide-item + .doc-guide-item {
  margin-top: 42rpx;
}