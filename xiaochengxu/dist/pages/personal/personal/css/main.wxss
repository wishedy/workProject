@import "/vendor/css/main.wxss";

.index {
  background: #F2F4F7;
  padding-bottom: 98rpx;
}
.index .header {
  width: 100%;
  background: white;
  position: relative;
  height: 128rpx;
  padding-bottom: 52rpx;
}
.index .header .dp {
  content: none !important;
  position: absolute;
  left: 72rpx;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  vertical-align: center;
}
.index .header ._span {
  position: absolute;
  height: 60rpx;
  overflow: hidden;
  left: 240rpx;
  top: 45rpx;
  font-size: 40rpx;
  color: #222222;
  letter-spacing: 0;
  line-height: 40rpx;
  text-overflow: ellipsis;
  max-width: 450rpx;
  white-space: nowrap;
}
.index .header .loginButton {
  margin-top: 80rpx;
  width: 354rpx;
  text-align: center;
  border: 1rpx solid #1ACAA7;
  border-radius: 100rpx;
  color: #00B9AD;
  font-size: 36rpx;
}
.index .item-list {
  background: white;
  margin-top: 20rpx;
}
.index .item-list .item {
  border-radius: 0;
  color: #222222;
  line-height: 1.2;
  text-align: left;
  background: none;
  padding: 48rpx 0;
  margin: 0 50rpx;
  font-size: 36rpx;
  border-bottom: 1rpx solid #EAEAEA;
}
.index .item-list .item:after {
  display: none;
}
.index .item-list .item .extension {
  font-size: 32rpx;
  color: #BBBBBB;
  letter-spacing: 0;
  line-height: 16rpx;
  margin-left: 178rpx;
}
.index .item-list .item .getCard {
  font-size: 32rpx;
  color: #FC746A;
  letter-spacing: 0;
  line-height: 16rpx;
  margin-left: 240rpx;
}
.index .item-list .listIcon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 8rpx;
}
.index .item-list .listIcon.special {
  top: 4rpx;
}
.index .item-list .addJournal {
  width: 320rpx;
  font-weight: 500;
  height: 88rpx;
  font-size: 30rpx;
  background: #2EA9FE;
  border-radius: 8rpx;
  margin: 60rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index .item-list .addJournal .addIcon {
  width: 28rpx;
  height: 28rpx;
}
.index .item-list .addJournal .addText {
  font-size: 28rpx;
  line-height: 1;
  margin-left: 12rpx;
  color: #ffffff;
}
.index .item-list .addJournal.updateJournal {
  width: 340rpx;
  margin-top: 48rpx;
}
.index .item-list .haveJournal {
  display: flex;
  margin-top: 60rpx;
}
.index .item-list .haveJournal .haveItem {
  flex: 1;
  text-align: center;
}
.index .item-list .haveJournal .haveItem .num {
  font-size: 50rpx;
  font-weight: bold;
}
.index .item-list .haveJournal .haveItem .num.hearten {
  color: #fc746a;
}
.index .item-list .haveJournal .haveItem .num.journal {
  color: #02b5ac;
}
.index .item-list .haveJournal .haveItem .title {
  font-size: 30rpx;
  font-weight: 400;
  margin-top: 10rpx;
  color: #777777;
}
.index .item-list ._span {
  margin-left: 20rpx;
}
.authorization {
  margin-top: 180rpx;
  background: #fff;
}
.authorization image {
  width: 360rpx;
  height: 256rpx;
  display: block;
  margin: 0 auto 28rpx;
}
.authorization .text {
  font-size: 28rpx;
  color: #888888;
  letter-spacing: 0;
  line-height: 28rpx;
  text-align: center;
  margin-bottom: 140rpx;
}
.authorization ._button {
  width: 400rpx;
  height: 100rpx;
  border: 2rpx solid #12D5A8;
  border-radius: 50rpx;
  line-height: 100rpx;
  color: #11D5A7;
  display: block;
  margin: 0 auto;
}