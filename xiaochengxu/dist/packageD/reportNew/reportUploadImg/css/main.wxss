@import "/vendor/css/main.wxss";

.main-content {
  padding-bottom: 86rpx;
}
.main-content .uploadBox .uploadTitleBox {
  padding: 40rpx 30rpx;
}
.main-content .uploadBox .uploadTitleBox:after {
  content: '';
  display: table;
  clear: both;
}
.main-content .uploadBox .uploadTitleBox .title-left {
  float: left;
  color: #222222;
  font-weight: bold;
  font-size: 38rpx;
}
.main-content .uploadBox .uploadTitleBox .title-left .select-tip {
  color: #999999;
  font-size: 32rpx;
  display: inline-block;
  font-weight: normal;
}
.main-content .uploadBox .uploadTitleBox .title-right {
  float: right;
  font-size: 24rpx;
  color: #00b9ad;
  background: #f3f7f7;
  border-radius: 4rpx;
  padding: 4rpx 8rpx 4rpx 42rpx;
  position: relative;
}
.main-content .uploadBox .uploadTitleBox .title-right .tip-icon {
  width: 30rpx;
  height: 32rpx;
  display: inline-block;
  background: url("http://m.allinmed.cn/static/image/mp/index/1.3.0/photo.png") no-repeat center center;
  position: absolute;
  top: 50%;
  margin-top: -16rpx;
  left: 8rpx;
}
.main-content .uploadBox .upload-content {
  padding-left: 30rpx;
  padding-bottom: 20rpx;
}
.main-content .uploadBox .upload-content:after {
  content: '';
  display: table;
  clear: both;
}
.main-content .uploadBox .upload-content .upLoadItem {
  box-sizing: border-box;
  width: 216rpx;
  height: 216rpx;
  text-align: center;
  position: relative;
  display: inline-block;
  float: left;
  vertical-align: top;
  margin: 0 20rpx 24rpx 0;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.4/camera2.png") no-repeat center;
  background-size: 100% 100%;
}
.main-content .uploadBox .upload-content .upLoadItem.video {
  width: 216rpx;
  height: 162rpx;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.4/uploadvideo@2x.jpg") no-repeat center;
  background-size: 100% 100%;
}
.main-content .uploadBox .upload-content .upLoadItem.addBtn {
  width: 120rpx;
  height: 120rpx;
  background: url("https://m.allinmed.cn/static/image/wxmp/questionDesc/cameraTwo.png") no-repeat;
  background-size: 120rpx 120rpx;
  border-radius: 4rpx;
  margin-right: 20rpx;
}
.main-content .uploadBox .upload-content .upLoadItem .imgItem {
  width: 100%;
  height: 100%;
}
.main-content .uploadBox .upload-content .upLoadItem .imgItem-delBtn {
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  background: url("https://m.allinmed.cn/static/image/wxmp/questionDesc/symptom_photo_delete@2x.png") no-repeat;
  background-size: 38rpx 38rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
}
.main-content .uploadBox .upload-content .upLoadItem .imgItem-cover {
  display: inline-block;
  opacity: 0.83;
  background: #545454;
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}
.main-content .uploadBox .upload-content .upLoadItem .imgItem-cover .imgItem-loading {
  display: inline-block;
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  background: url("https://m.allinmed.cn/static/image/img00/patientConsult/symptom_photo_loading@2x.png") no-repeat center;
  background-size: 38rpx 38rpx;
  top: 50%;
  left: 50%;
  margin-left: -19rpx;
  margin-top: -19rpx;
  animation: submitIng 1s linear infinite;
  -webkit-animation: submitIng 1s linear infinite;
}
@keyframes submitIng {
0% {
    -webkit-transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
}
}
.main-content .uploadBox .upload-content .upLoadItem .imgItem-fail {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  opacity: 0.83;
  background: #545454;
}
.main-content .uploadBox .upload-content .upLoadItem .imgItem-fail .imgItem-failText {
  font-size: 24rpx;
  color: #ffffff !important;
  text-align: center;
  position: absolute;
  top: 35%;
  width: 100%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.main-content .uploadBox .upload-content .upLoadItem .imgItem-fail .imgItem-reloadText {
  font-size: 24rpx;
  color: #ffffff !important;
  text-align: center;
  position: absolute;
  top: 62%;
  width: 100%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.main-content .uploadBox .upload-number {
  padding-left: 30rpx;
  padding-bottom: 30rpx;
  font-size: 28rpx;
  color: #666666;
}
.main-content .uploadBox .upload-number .upload-viewAll {
  display: inline-block;
  color: #00b9ad;
}
.main-content .upload-submitBtn {
  width: 560rpx;
  height: 96rpx;
  background: #cccccc;
  border-radius: 8rpx;
  text-align: center;
  color: #ffffff;
  font-size: 36rpx;
  line-height: 96rpx;
  margin: 0 auto;
  margin-top: 56rpx;
}
.main-content .upload-submitBtn.actived {
  background: #00b9ad;
}