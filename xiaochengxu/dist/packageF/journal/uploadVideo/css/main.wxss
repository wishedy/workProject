@import "/vendor/css/main.wxss";

.videoContent .title-box {
  padding: 0 30rpx;
}
.videoContent .title-box .title-box-title {
  font-size: 38rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #222222;
  position: relative;
  padding-left: 50rpx;
}
.videoContent .title-box .title-box-title .title-icon {
  position: absolute;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.4/smile.png") no-repeat center;
  background-size: 100% 100%;
  top: 50%;
  margin-top: -30rpx;
  left: -10rpx;
}
.videoContent .title-box .title-box-describe {
  background: rgba(88, 128, 237, 0.08);
  border-radius: 6rpx;
  padding: 14rpx 20rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #666666;
  margin: 40rpx 0;
}
.videoContent .first-box {
  margin-top: 20rpx;
}
.videoContent .second-box {
  margin-top: 58rpx;
}
.videoContent .videoBox {
  padding: 0 40rpx 40rpx;
}
.videoContent .videoBox:after {
  content: '';
  display: table;
  clear: both;
}
.videoContent .videoBox .videoList {
  width: 216rpx;
  height: 162rpx;
  float: left;
  margin-right: 20rpx;
  margin-top: 10rpx;
  position: relative;
}
.videoContent .videoBox .videoList .videoItem {
  width: 216rpx;
  height: 162rpx;
  position: relative;
}
.videoContent .videoBox .videoList .videoItem ._img {
  width: 100%;
  height: 100%;
}
.videoContent .videoBox .videoList .videoItem .play-btn {
  position: absolute;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -30rpx;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.4/playbtn.png") no-repeat center;
  background-size: 100% 100%;
}
.videoContent .videoBox .videoList .videoItem .video-time {
  position: absolute;
  right: 4rpx;
  bottom: 4rpx;
  font-size: 24rpx;
  color: #ffffff;
}
.videoContent .videoBox .videoList .delateVideoBtn {
  display: inline-block;
  position: absolute;
  top: 0;
  right: 0;
  width: 44rpx;
  height: 44rpx;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.4/delatebtn.png") no-repeat center;
  background-size: 100% 100%;
  z-index: 2;
}
.videoContent .videoBox .videoList .upload-coverImg {
  width: 216rpx;
  height: 162rpx;
  float: left;
  margin-right: 20rpx;
  background: #545454;
}
.videoContent .videoBox .videoList .upload-coverImg .tc-videoLoadingImg {
  padding-top: 28rpx;
}
.videoContent .videoBox .videoList .upload-coverImg .tc-videoLoadingImg ._img {
  margin: 0 auto;
  width: 50rpx;
  height: 50rpx;
  display: block;
  animation: rotate 1s linear forwards infinite;
}
.videoContent .videoBox .videoList .upload-coverImg .tc-videoLoadingText {
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
}
.videoContent .videoBox .videoList .upload-success {
  width: 216rpx;
  height: 162rpx;
  float: left;
  margin-right: 20rpx;
}
.videoContent .videoBox .videoList .upload-success ._img {
  width: 100%;
  height: 100%;
}
.videoContent .videoBox .videoList .upload-fail {
  width: 100%;
  height: 100%;
  background: #545454;
  position: relative;
  font-size: 28rpx;
  color: #ffffff;
}
.videoContent .videoBox .videoList .upload-fail .fail-first {
  display: inline-block;
  width: 100%;
  position: absolute;
  top: 30%;
  text-align: center;
}
.videoContent .videoBox .videoList .upload-fail .fail-second {
  display: inline-block;
  width: 100%;
  position: absolute;
  top: 50%;
  text-align: center;
}
.videoContent .videoBox .wxChoseFileBtn {
  width: 216rpx;
  height: 162rpx;
  margin: 10rpx 0;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.4/uploadvideo@2x.jpg") no-repeat center;
  background-size: 100% 100%;
  float: left;
}
.videoContent .videoBtn-box {
  padding-top: 50rpx;
  bottom: 100rpx;
  width: 100%;
  padding-bottom: 100rpx;
}
.videoContent .videoBtn-box .videoBtn {
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.videoContent .videoBtn-box .videoBtn.ensure ._span {
  display: inline-block;
  width: 560rpx;
  height: 96rpx;
  background: #00b9ad;
  border-radius: 8rpx;
  color: #ffffff;
  line-height: 96rpx;
  font-size: 36rpx;
}
.videoContent .videoBtn-box .videoBtn.later ._span {
  display: inline-block;
  width: 120rpx;
  text-align: center;
  color: #888888;
  font-size: 30rpx;
  margin-top: 10rpx;
}