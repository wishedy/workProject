@import "/vendor/css/main.wxss";

.mainPublish {
  height: 100%;
}
.mainPublish .title {
  font-size: 46rpx;
  font-weight: 700;
  color: #222222;
  margin-bottom: 20rpx;
  margin-top: 68rpx;
  margin-left: 60rpx;
}
.mainPublish .title:before {
  position: relative;
  top: -2rpx;
  width: 60rpx;
  height: 60rpx;
  background: url("https://m.allinmed.cn/static/image/mp/index/1.1.4/selected.png") no-repeat;
  display: inline-block;
  content: "";
  background-size: 100% 100%;
  vertical-align: middle;
}
.mainPublish .mainContent {
  margin-left: 62rpx;
  margin-right: 42rpx;
}
.mainPublish .mainContent .comment {
  width: 95%;
  line-height: 46rpx;
  font-size: 32rpx;
  color: #444444;
  margin-top: 20rpx;
}
.mainPublish ._img {
  width: 360rpx;
  height: 360rpx;
  display: block;
  margin: auto;
  margin-top: 64rpx;
  border-radius: 8rpx;
}
.mainPublish .saveButtom {
  margin: auto;
  width: 560rpx;
  margin-top: 84rpx;
  background-color: #00B9AD;
  color: white;
  font-size: 36rpx;
  font-weight: 500;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  border-radius: 8rpx;
  display: block;
}
.mainPublish .back {
  color: #00B9AD;
  font-size: 36rpx;
  text-align: center;
  padding: 48rpx 0 70rpx;
}